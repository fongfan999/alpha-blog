<%= render "shared/errors", obj: @user %>

<%= form_for @user do |f| %>
	<div class="row">
		<div class="form-group">
			<div class="col-sm-2 col-sm-offset-2"><%= f.label :username, class: "control-label" %></div> 
			<div class="col-sm-6"><%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %></div>
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="form-group">
			<div class="col-sm-2 col-sm-offset-2"><%= f.label :email, class: "control-label" %></div>
			<div class="col-sm-6"><%= f.email_field :email, class: "form-control", placeholder: "Enter password" %></div>
		</div>
	</div>	
	<br/>
	<div class="row">
		<div class="form-group">
			<div class="col-sm-2 col-sm-offset-2"><%= f.label :password, class: "control-label" %></div>
			<div class="col-sm-6"><%= f.password_field :password, class: "form-control", placeholder: "Enter email" %></div>
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="form-group">
			<div class="col-sm-offset-4">
				<div class="btn"><%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %></div>
			</div>
		</div>
	</div>
<% end %>

<div class="row">
	<div class="col-sm-offset-1">[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]</div>
</div>