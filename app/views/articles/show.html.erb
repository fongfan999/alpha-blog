<div class="container">
	<h2 class="center">Title: <%= @article.title %></h2>
	<div class="row">
		<div class="well col-sm-10 col-sm-offset-1">
			<% if @article.user %>
				<div class="listing center">
					<div class="row">
						<div class="col-md-4 col-md-offset-4">
							<span>Created by: </span><br/>
							<span><%= link_to(gravatar_for(@article.user, size: 70), user_path(@article.user)) %></span><br/>
							<span class="article-title"><%= link_to(@article.user.username, user_path(@article.user)) %></span><br/>
							<span><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></span>
						</div>
					</div>
				</div>
			<% end %>
			<h4 class="center description"><strong>Description:</strong></h4>

			<div class="row">
				<div class="col-sm-10 col-sm-offset-1"><hr/><%= simple_format(@article.description) %></div>
			</div>

			<div class="row">
				<div class="col-sm-10 col-sm-offset-1">
					<hr/>
					<%= link_to "Back to view all articles", articles_path, class: "btn btn-sm btn-success" %>
					<% if logged_in? && (current_user == @article.user || current_user.admin?) %>
					 | <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-sm btn-primary" %>
					 | <%= link_to "Delect this article", article_path(@article),
																							method: :delete,
																							data: { confirm: "Are you sure" },
																							class: "btn btn-sm btn-danger" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
